<% layout('/layouts/boilerplate') %>
<div class="row mt-3">
    <h1 class="col-5 offset-3">SignUp on Wanderlust</h1>
    <div class="col-5 offset-3">
        <form action="/signup" method="post" class="needs-validation" novalidate >
            <!--Username -->
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input name="username" type="text" class="form-control" required id="username">
                <div class="valid-feedback">Looks Good!</div>
                <div class="invalid-feedback">Please enter a username</div>
            </div>
            <!-- Email -->
            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input name="email" type="text" class="form-control" required id="email">
                <div class="valid-feedback">Looks Good!</div>
                <div class="invalid-feedback">Please enter a email</div>
            </div>

            <!-- password -->
             

            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input name="password" type="password" class="form-control" required id="password">
                <div class="valid-feedback">Looks Good!</div>
                <div class="invalid-feedback">Please enter a password</div>
            
            </div>

            <button class="btn btn-success ">SignUp</button>
        </form>
    </div>
</div>